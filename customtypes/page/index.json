{
	"id": "page",
	"label": "Page",
	"format": "page",
	"repeatable": true,
	"status": true,
	"json": {
		"Main": {
			"uid": {
				"type": "UID",
				"config": {
					"label": "Slug",
					"placeholder": ""
				}
			},
			"title": {
				"type": "StructuredText",
				"config": {
					"label": "Title",
					"placeholder": "",
					"allowTargetBlank": false,
					"single": "strong,em"
				}
			},
			"showbackground": {
				"type": "Boolean",
				"config": {
					"label": "Show meta image as background",
					"placeholder_false": "No",
					"placeholder_true": "Yes",
					"default_value": false
				}
			},
			"slices": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {
						"full_width_image": {
							"type": "SharedSlice"
						},
						"services": {
							"type": "SharedSlice"
						},
						"carousel": {
							"type": "SharedSlice"
						},
						"media_embed": {
							"type": "SharedSlice"
						},
						"faqs": {
							"type": "SharedSlice"
						},
						"details_card": {
							"type": "SharedSlice"
						},
						"form": {
							"type": "SharedSlice"
						},
						"masonry_gallery": {
							"type": "SharedSlice"
						},
						"horizontal_gallery": {
							"type": "SharedSlice"
						},
						"tabs": {
							"type": "SharedSlice"
						},
						"discover_categories": {
							"type": "SharedSlice"
						},
						"footnotes": {
							"type": "SharedSlice"
						},
						"testimonials": {
							"type": "SharedSlice"
						},
						"staff": {
							"type": "SharedSlice"
						},
						"latest_articles": {
							"type": "SharedSlice"
						},
						"case_studies": {
							"type": "SharedSlice"
						},
						"showcase": {
							"type": "SharedSlice"
						},
						"hero": {
							"type": "SharedSlice"
						},
						"rich_text": {
							"type": "SharedSlice"
						}
					}
				}
			}
		},
		"SEO & Metadata": {
			"meta_title": {
				"type": "Text",
				"config": {
					"label": "Meta Title",
					"placeholder": "A title of the page used for social media and search engines"
				}
			},
			"meta_description": {
				"type": "Text",
				"config": {
					"label": "Meta Description",
					"placeholder": "A brief summary of the page"
				}
			},
			"meta_image": {
				"type": "Image",
				"config": {
					"label": "Meta Image",
					"constraint": {
						"width": 2400,
						"height": 1260
					},
					"thumbnails": []
				}
			}
		}
	}
}
